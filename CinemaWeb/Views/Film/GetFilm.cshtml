@model CinemaWeb.Domain.Entity.Film

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/HideScrollcss.css" />
<div style="padding: 5px;"></div>
<div class="card mb-3">
    <div class="row g-1">
        <div class="col-md-3">
            <img src="https://kuda-spb.ru//uploads/190729192252260.jpg"
                 class="card-img-top" style="display: flex;" alt="@Model?.Name">
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Name</h5>
                <p class="card-text"><b>Жанр(-ы): </b>@Model?.GenreFilm</p>
                <p class="card-text"><b>Стоимость: </b>@Model?.Price BYN</p>
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
                <p class="card-text"><small class="text-muted">Дата выпуска - @Model?.ReleaseDate</small></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
            </div>
        </div>
    </div>
</div>
<footer>
</footer>

